back = #A3C1C3
head = #284244
bar = rgba(203, 238, 63, 0.8)
elementos = rgba(255, 255, 255, 0.9)
verdoso = #9DDD58
amarilloso = #F8ED6E
naranja = #FFCB6F
@font-face{
	font-family:quicksand-dash;
	src:url(Quicksand-LightItalic.otf);
} 
body
	background-color back
	font-family quicksand-dash
	font-size 16px
header
	background-color head
	height 10em
	text-align center
	position relative
	.logo
		border-radius 50%
		width 5em
		height 5em
		background-color back
		position absolute
		top 2.5em
		left 8px
		text-align center
		h2
			padding 0
			margin 0
			font-size 60px
			color white
			
		
.menu
	background-color bar
	height 2em
	position relative 
	
	border-bottom 0.15em solid rgba(40, 66, 68, 0.8)
	&:before
		border-bottom 16px solid transparent
		border-top 16px solid transparent
		border-left 12px solid head
		content ""
		position absolute
		top 0 
		left 0
	&:after
		border-bottom 16px solid transparent
		border-top 16px solid transparent
		border-right 12px solid head
		content ""
		position absolute
		top 0 
		right 0	
.content
	padding 0.5em
.box
	width 100%
	height 7em
	margin 0
	background-color elementos
	border 1.5px solid head
.elemento 
	width 7em
	height 100%
	background-color head
	position relative


.metal
	width 90%
	height 90%
	background-color amarilloso
	border-radius 50%
	position absolute
	left 5%
	top 5%
.no_metal
	width 90%
	height 90%
	background-color verdoso
	border-radius 50%
	position absolute
	left 5%
	top 5%
.metaloide
	width 90%
	height 90%
	background-color naranja
	border-radius 50%
	position absolute
	left 5%
	top 5%
