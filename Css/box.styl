background = #CDE669
no_metal = #F7FD5B
body
	font-size 16px
	text-align center
	background-color background
header
	width 100%
	background-color rgba(0, 0, 0, .90)
	height 5.5em

.elementos
	margin 0 
	padding 0
.elementos
li 
	list-style-type:none
	margin 1em 0


.box
	width 100%
	height 70px
	background-color #232323
	display inline-table
	position relative

	&:before
		border-top 46px solid transparent
		border-left 27px solid #CDE669
		border-bottom 46px solid transparent
		position absolute
		content ""
		top 0
		left 0
	

.elemento
	border-radius 50%
	background-color no_metal
	margin 1em 1em 1em 2.5em
	height 60px
	width 60px
	white-space nowrap
	position relative

.numa
	width 20px
	height 20px
	border-radius 50%
	background-color #FE0010
	color white

.elc
	width 15px
	height 15px
	border-radius 50%
	background-color rgba(10, 10, 10, .75)
	position absolute
	right 3%
	top 40%

.elcp
	color white
	font-size 50%
	margin 0
	position absolute
	top 15%


.simbolo
	display inline
	font-weight las
	font-size 20px

